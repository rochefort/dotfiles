# mysql
function SELECT () {
    mysql -uroot -e "SET NAMES utf8; SELECT $*"
}


function SHOW () {
    mysql -uroot -e "SET NAMES utf8; SHOW $*"
}

alias SELECT="noglob SELECT"
alias SHOW="noglob SHOW"

