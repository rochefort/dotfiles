# peco
function peco-select-history() {
    local tac
    if which tac > /dev/null; then
        tac="tac"
    else
        tac="tail -r"
    fi
    BUFFER=$(history -n 1 | \
        eval $tac | \
        peco --query "$LBUFFER")
    CURSOR=$#BUFFER
    zle clear-screen
}
zle -N peco-select-history
bindkey '^r' peco-select-history

# function
c() { open $1 -a /Applications/CotEditor.app }
d() { open dict:///"$@" ;say "$@" }
git() { hub "$@" }
crontab() {
  if [ $@ != "-r" ]; then
    EDITOR=$HOME/bin/vim/bin/vim;/usr/bin/crontab $@
  fi
}
jqs() {
  echo "$@" | jq . -C | less -R
}

